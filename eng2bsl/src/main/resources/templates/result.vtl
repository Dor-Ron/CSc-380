<html>
	<head>
		<title>Your BSL Translation</title>
		<style>
			body {
				background-image: url("http://st.depositphotos.com/1001214/2198/v/950/depositphotos_21982343-Cool-cell-structure-Constellation-seamless-pattern.jpg");
				background-repeat: repeat;
			}

			ul li {
				list-style-type: none;
				margin-top: 2em;
				margin-bottom: 2em;
			}
			nav div a {
				font-family: 'Righteous', cursive;
			}
		</style>
	</head>
	<body>
		<ul>
			#foreach( $word in $phrase )
				#if ( $word.substring(0, 4) == "http" )
					<li>
						<h4>$components.get( $foreach.index )</h4>
						<video width="320" height="240" controls>
							<source src="$word" type="video/mp4">
						</video>
						<br/>
					</li>
				#else
					<li>
						<h4>$components.get( $foreach.index )</h4>
						<img src="$word" height=250 width=250/>
						<br/>
					</li>
				#end
			#end
		</ul>
	</body>
</html>
