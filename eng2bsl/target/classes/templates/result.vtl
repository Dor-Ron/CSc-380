<html>
	<head>
		<title>Your BSL Translation</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
		<link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
		<style>
			body {
				background-image: url("http://st.depositphotos.com/1001214/2198/v/950/depositphotos_21982343-Cool-cell-structure-Constellation-seamless-pattern.jpg");
				background-repeat: repeat;
			}

			ul li {
				list-style-type: none;
				margin-top: 2em;
				margin-bottom: 2em;
			}

			.row {
				text-align: center;
				background-color: rgba(192,192,192,0.5);
			}

			h4 {
				margin-top: 100px;
				text-shadow: 3px 3px 6px #ffcdd2;
			}

			nav div a {
				font-family: 'Righteous', cursive;
			}
		</style>
	</head>
	<body>
		<nav>
		 <div class="nav-wrapper">
			 <a href="/" class="brand-logo center">EN-2-BSL</a>
		 </div>
	 	</nav>

		<div class="container">
			<ul>
				#foreach( $word in $phrase )
					#if ( $word.substring(0, 4) == "http" )
						<li>
							<div class="row" height="250px">
								<h4 class="col m6 push m6">$components.get( $foreach.index )</h4>
								<video class="col m5 pull m5" width="320" height="240" controls>
									<source src="$word" type="video/mp4">
								</video>
								<br/>
							</div>
						</li>
					#else
						<li>
							<div class="row" height="250px">
								<h4 class="col m6 push m6">$components.get( $foreach.index )</h4>
								<img class="col m5 pull m5" src="$word" height="250px" width="250px" />
								<br/>
							</div>
						</li>
					#end
				#end
			</ul>
		</div>
	</body>
</html>
